<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555454"
    tools:context=".clases.MainActivity">

    <!--OBJETO PARA CAMPO DE TEXTO-->
    <EditText
        android:id="@+id/edtxt_nusuario"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="308dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--OBJETO PARA EL BOTON-->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:text="Login"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_pusuario" />

    <!--OBJETO PARA CAMPO DE TEXTO-->
    <EditText
        android:id="@+id/edtxt_pusuario"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_nusuario" />

    <!--OBJETO PARA ZONA DE MENSAJE DE TEXTO-->
    <TextView
        android:id="@+id/txt_nusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="276dp"
        android:background="#00FFFFFF"
        android:text="Usuario:"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--OBJETO PARA ZONA DE MENSAJE DE TEXTO-->
    <TextView
        android:id="@+id/txt_pusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="384dp"
        android:text="Password:"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--OBJETO PARA EL IMAGEN BOTON-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="206dp"
        android:layout_height="208dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="52dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usuario"
        tools:srcCompat="@tools:sample/avatars[2]" />

</androidx.constraintlayout.widget.ConstraintLayout>